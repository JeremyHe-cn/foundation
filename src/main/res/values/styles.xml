<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/font_white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Button_RoundRect_Accent">
        <item name="android:textColor">@color/font_accent_round_rect</item>
        <item name="android:background">@drawable/btn_accent_round_rect</item>
    </style>

    <style name="Button_RoundRect_Hint">
        <item name="android:textColor">@color/font_hint_round_rect</item>
        <item name="android:background">@drawable/btn_hint_round_rect</item>
    </style>

</resources>